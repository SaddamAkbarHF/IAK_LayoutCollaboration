<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="iak3.saddamakbar.layoutcollaboration.MainActivity"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp">

        <RelativeLayout
            android:background="#FF5722"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/salam_pembuka"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"/>


            <LinearLayout
                android:background="#128c7e"
                android:layout_below="@+id/TextView"
                android:id="@+id/LinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center">


                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button1"
                    android:layout_marginRight="8dp"
                    android:textColor="#FFFFFF"
                    android:text="More Info"/>

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    android:text="Mulai Pelatihan Android"
                    android:textColor="#FFFFFF"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_below="@+id/LinearLayout"
                android:orientation="vertical"
                android:background="#FF5722"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LinearLayout3">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Sponsored By :"
                    android:textColor="#FFFFFF"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_below="@+id/LinearLayout3">


                <ImageView
                    android:id="@+id/ImageView"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/LinearLayout"
                    android:src="@drawable/cmbg"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>

        </RelativeLayout>







</ScrollView>
